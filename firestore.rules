rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Match any document in the 'users' collection
    match /users/{userId} {
      // Allow a user to read and write their own user document
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Match any document in the 'conversations' subcollection
      match /conversations/{conversationId}/{documents=**} {
        // Allow a user to read and write any document within their own conversations
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
